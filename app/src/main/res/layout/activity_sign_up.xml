<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Activities.SignUpActivity">

  <LinearLayout
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:fontFamily="@font/patua"
      android:textColor="@color/colorTextDark"
      android:textSize="40sp"
      android:text="@string/app_name_logo"
      android:layout_marginTop="24dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:fontFamily="@font/roboto_light"
      android:textSize="16sp"
      android:text="Sign up. Join the community!"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
      android:layout_marginTop="32dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/signUpOrganizationNameEditText"
        android:textSize="16sp"
        android:inputType="textCapWords"
        android:fontFamily="@font/roboto_light"
        android:hint="Organization Name"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/signUpContactNumberEditText"
        android:textSize="16sp"
        android:inputType="phone"
        android:fontFamily="@font/roboto_light"
        android:hint="Contact Number"
        android:maxLength="10"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/signUpEmailAddressEditText"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/roboto_light"
        android:hint="Email Address"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
      android:layout_marginTop="32dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/signUpPasswordEditText"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:fontFamily="@font/roboto_light"
        android:hint="Password"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:layout_marginTop="16dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <android.support.design.widget.TextInputEditText
        android:id="@+id/signUpConfirmPasswordEditText"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:fontFamily="@font/roboto_light"
        android:hint="Confirm Password"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <Button
      android:id="@+id/signUpButton"
      android:layout_marginBottom="24dp"
      android:textColor="@android:color/white"
      android:padding="16dp"
      android:textSize="20sp"
      android:fontFamily="@font/roboto_light"
      android:textAllCaps="false"
      android:text="Register"
      android:theme="@style/ButtonStyleAccent"
      android:layout_marginTop="32dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  </LinearLayout>

</ScrollView>